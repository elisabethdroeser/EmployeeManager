@page "/employees/edit/{employeeId:int}"
@inject IDbContextFactory<EmployeeManagerDbContext> ContextFactory

<PageTitle>Edit Employee</PageTitle>

<h1>Edit Employee</h1>

@if (Employee is null && !IsBusy)
{
    <div class="alert alert-danger">
        Employee with id @EmployeeId was not found
    </div>
}
else
{
    <EmployeeForm Employee="@Employee"
              Departments="@Departments"
              IsBusy="@IsBusy" />
}

@*Edit Employee with Id @EmployeeId*@

@code {

    [Parameter]
    public int EmployeeId { get; set; }

    private Employee? Employee { get; set; }

    private Department[]? Departments { get; set; }

    private bool IsBusy { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        IsBusy = true;

        try
        {
            using var context = ContextFactory.CreateDbContext();
            Departments = await context.Departments.ToArrayAsync();
            Employee = await context.Employees
                            .FirstOrDefaultAsync(emp => emp.Id == EmployeeId);
        }
        finally
        {
            IsBusy = false;
        }
    }
}
